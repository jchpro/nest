{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@jchpro/nest-common": [
        "libs/common/src"
      ],
      "@jchpro/nest-common/request-logger": [
        "libs/common/src/request-logger"
      ],
      "@jchpro/nest-common/openapi": [
        "libs/common/src/openapi"
      ],
      "@jchpro/nest-config": [
        "libs/config/src"
      ],
      "@jchpro/nest-librarian": [
        "libs/librarian/src"
      ],
      "@jchpro/nest-mongoose": [
        "libs/mongoose/src"
      ]
    }
  }
}
